#!/usr/bin/env bash
# bin/release <build-dir>

ROOTS=$(find ~/approot/packages/ -name root)
if [ $( echo "${ROOTS}" | wc -l ) -gt 1 ]; then
    APP_ROOT=$(echo "$ROOTS" | head -1)
    cat << EOF
---
default_process_types:
  web: sleep 2d | KRE_APPBASE=$APP_ROOT klr Microsoft.Framework.ApplicationHost Kestrel --server.urls http://+:\$PORT
EOF
else
    cat << EOF
EOF
fi
